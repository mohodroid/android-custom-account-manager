<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="com.mohdroid.authentication.debug" />

    <Button
        android:id="@+id/invalidateAuthToken"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="invalidateAuthToken"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPackageName" />

    <Button
        android:id="@+id/getAuthTokenByFeature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="getAuthTokenByFeatures"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invalidateAuthToken" />

    <Button
        android:id="@+id/getAuthToken"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="getAuthToken"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getAuthTokenByFeature" />


    <Button
        android:id="@+id/getAuthTokenWithCallback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="getAuthTokenWithCallback"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getAuthToken" />

    <Button
        android:id="@+id/addAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="addAccount"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getAuthTokenWithCallback" />

    <Button
        android:id="@+id/getOtherBuildTypeToken"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="getAuthTokenFromOtherAccount"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addAccount" />

    <Button
        android:id="@+id/getOthersAccounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="getAllAccounts"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getOtherBuildTypeToken" />


    <Button
        android:id="@+id/setVisibleAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="setAccountVisibility"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getOthersAccounts" />


</androidx.constraintlayout.widget.ConstraintLayout>